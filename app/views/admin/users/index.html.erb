
<%= provide(:title, "Users") %>
<div class="container">
    <h1 class="h1 mt-5">Users</h1>
    <div class="row d-flex justify-content-between">
    <div class="table-responsive">
    <%= link_to 'New User', new_admin_user_path , :class => "btn btn-outline-success"%>
        <table class="table">
            <thead>
                <th>ID</th>
                <th>Email</th>
                <th>Action</th>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td>
                        <%= link_to 'Show', admin_user_path(user), :class => "btn btn-outline-info" %>
                        <%= link_to 'Edit', edit_admin_user_path(user),:class => "btn btn-outline-warning" %>
                        <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger" %>
                    </td>
                  </tr>
                <% end %>

            </tbody>
        </table>
    </div>
    </div>
    <div class="mt-5"><%= will_paginate @users %></div>
</div>