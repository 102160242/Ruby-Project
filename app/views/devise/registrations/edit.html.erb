<%= provide(:title, "Profile") %>
<div class="container">
  <h1 class="h1 mt-5">Profile</h2>
  <div class="row d-flex justity-content-center mt-5">
    <div class="col-sm-9 col-md-6">
      <h2 class="h2">Account info</h2>
      Thong tin ve user: so luong tu, follow....<br>
      <button type="button" class="btn btn-outline-info">
        Following <span class="badge badge-light"><%=  current_user.following.count %></span> users
      </button>
      <button type="button" class="btn btn-outline-warning">
        Followers <span class="badge badge-light"><%=  current_user.followers.count %></span>
      </button>
    </div>
    <div class="col-sm-9 col-md-6">
        <h2 class="h2">Change password</h2>
        <%= form_with model: resource, class: "form mt-5", local: true, url: registration_path(resource_name)  do |f| %>   
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, readonly: true %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"%>
          </div>

          <div class="form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <%= f.submit "Update", class: "btn btn-outline-primary btn-lg btn-block" %>

        <% end %>
        <!--
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>-->

    </div>
  </div>
</div>