<% provide(:title, 'Login') %>
<h1 class="h1 mt-5">Login</h1>

<div class="row d-flex justify-content-center">
  <div class="col-md-6">
    <%= form_with model: @user, class: "form mt-5", local: true, url: login_path  do |f| %>   
      <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: "form-control", required: true %>
      </div>
      <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", required: true %>
      </div>
      <%= f.submit "Login", class: "btn btn-outline-primary btn-lg btn-block" %>
    <% end %>
  </div>
</div>